.tabs
  clear both
  width 500px

.tabs
  position relative
  min-height 200px /* This part sucks */
  clear both
  margin 25px 0

.tab
  float left
  margin-top 1px

.tab label
  background #eee
  padding 10px
  border 1px solid #ccc
  margin-left -1px
  position relative
  left 1px

.tab [type=radio]
  display none

.content
  position absolute
  top 28px
  left 0
  background white
  right 0
  bottom 0
  padding 20px
  border 1px solid #ccc

[type=radio]:checked ~ label
  background white
  border-bottom 1px solid white
  z-index 2

[type=radio]:checked ~ label ~ .content
  z-index 1


.seller
  color #468847

.buyer
  color #3a87ad